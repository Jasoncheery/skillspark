{
  "kind": "collectionType",
  "collectionName": "assignments",
  "info": {
    "singularName": "assignment",
    "pluralName": "assignments",
    "displayName": "Assignment",
    "description": "Homework assignments created by teachers"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "dueDate": {
      "type": "datetime"
    },
    "class": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::class.class",
      "inversedBy": "assignments"
    },
    "submissions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::submission.submission",
      "mappedBy": "assignment"
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "files", "videos"]
    }
  }
}
